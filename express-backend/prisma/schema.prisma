generator client {
  provider = "prisma-client-js"
}

model Event {
  id              String   @id @default(uuid())
  eventImage      String
  organizerImage  String
  date            DateTime 
  teamIcons       String[] @default([]) 
  bounties        Bounty[]
}

model Bounty {
  id              String   @id @default(uuid())
  name            String
  venueImageURI   String
  tag             String
  contractAddress String @unique @db.VarChar(42)
  totalReward     BigInt
  rewardToken     String @db.VarChar(42)
  participantsLimit BigInt
  event           Event    @relation(fields: [eventId], references: [id])
  eventId         String
  moments         Moment[]
} 

model Moment {
  id              String   @id @default(uuid())
  score           Int
  imageURI        String
  walletAddress   String
  bounty          Bounty   @relation(fields: [bountyId], references: [id])
  bountyId        String
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
